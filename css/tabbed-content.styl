.tabbed-content-tabs
  margin: 1em 3vw
  text-align: center

.tabbed-content-tab
  @extends $reset-button
  border-bottom: 3px solid transparent
  font-size: 0.8em
  letter-spacing: 0.05em
  padding: 0.5em 3vw
  text-transform: uppercase

  &:hover
    border-bottom-color: rgba(gray, 0.5)

  &.active
    border-bottom-color: MAIN_HIGHLIGHT
    font-weight: bold
